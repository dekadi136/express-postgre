generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
}

model Blog {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title String 
  content String?
}

model Category {
  id    Int    @id @default(autoincrement())
  createdAt DateTime @default(now())
  name  String
}

model Biodata {
  id    Int    @id @default(autoincrement())
  createdAt DateTime @default(now())
  name  String
  nim String @unique
  tanggal_lahir DateTime
  alamat String
  sudah_menikah String
}